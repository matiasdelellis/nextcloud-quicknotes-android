<resources>
    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/defaultBrand</item>
        <item name="colorAccent">@color/defaultBrand</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:windowLightStatusBar">@bool/isDayMode</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
    </style>

    <style name="AppTheme" parent="BaseTheme"/>

    <style name="SplashTheme" parent="BaseTheme">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="EditorTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/defaultBrand</item>
        <item name="colorAccent">@color/defaultBrand</item>
        <item name="android:statusBarColor">@color/defaultNoteTint</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="toolbarNavigationButtonStyle">@style/Note.Toolbar.Button.Navigation.Tinted</item>
    </style>

    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:tint">?colorOnBackground</item>
    </style>

    <style name="Note.Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:tint">@color/defaultNoteTint</item>
    </style>
</resources>