<ar.com.delellis.quicknotes.shared.SquareFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/attachment_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/attachment_thumbnail"
            android:contentDescription="@string/attachment_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:scaleType="fitXY"
            android:background="@color/white"
            tools:srcCompat="@tools:sample/backgrounds/scenic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageButton
            android:id="@+id/delete_attachment"
            android:contentDescription="@string/delete_attachment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/spacer_1x"
            android:padding="@dimen/spacer_1hx"
            android:background="@drawable/round_button"
            android:src="@drawable/ic_delete_grey"/>
    </RelativeLayout>

</ar.com.delellis.quicknotes.shared.SquareFrameLayout>
